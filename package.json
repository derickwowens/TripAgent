{
  "name": "tripagent",
  "version": "0.1.0",
  "description": "Stateless Travel MCP Server - Search flights, hotels, cars, and vacation rentals",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/api/server.ts",
    "build": "tsc",
    "test": "vitest run",
    "test:watch": "vitest",
    "start": "node dist/api/server.js",
    "start:prod": "NODE_ENV=production node dist/api/server.js",
    "api": "tsx src/api/server.ts",
    "mcp": "node --loader tsx src/mcp/server.ts",
    "cli": "tsx src/cli/simple.ts",
    "android": "./scripts/run-android.sh",
    "android:restart": "./scripts/restart-android.sh",
    "mobile:start": "cd mobile && npx expo start",
    "mobile:android": "cd mobile && npx expo start --android",
    "mobile:build:android": "cd mobile && eas build --platform android --profile production",
    "mobile:build:preview": "cd mobile && eas build --platform android --profile preview",
    "validate-links": "tsx scripts/validate-nps-links.ts",
    "prebuild:validate": "npm run validate-links && npm run build",
    "sync:state": "tsx data/sync/runSync.ts state",
    "sync:wi": "tsx data/sync/runSync.ts state WI",
    "sync:fl": "tsx data/sync/runSync.ts state FL",
    "sync:all": "tsx data/sync/runSync.ts all",
    "parks:generate": "tsx data/scripts/generateLinks.ts",
    "parks:validate": "tsx data/tests/validateLinks.test.ts all",
    "parks:export": "tsx data/scripts/exportParkData.ts all",
    "parks:export:wi": "tsx data/scripts/exportParkData.ts WI",
    "parks:export:fl": "tsx data/scripts/exportParkData.ts FL",
    "parks:upload": "tsx data/scripts/syncToS3.ts all",
    "parks:upload:wi": "tsx data/scripts/syncToS3.ts WI",
    "parks:upload:fl": "tsx data/scripts/syncToS3.ts FL",
    "parks:master-index": "tsx data/scripts/uploadMasterIndex.ts",
    "trails:upload": "tsx data/scripts/uploadTrailData.ts",
    "trails:sync": "tsx data/scripts/syncTrailData.ts",
    "sync:weekly": "tsx data/scripts/cronWeeklySync.ts",
    "nps:fetch": "tsx data/scripts/fetchNPSSites.ts",
    "nps:upload": "tsx data/scripts/fetchNPSSites.ts --upload"
  },
  "bin": {
    "tripagent": "./src/cli/simple.ts"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@modelcontextprotocol/sdk": "^0.5.0",
    "@types/pg": "^8.16.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "expo-device": "~8.0.10",
    "expo-location": "^19.0.8",
    "express": "^5.2.1",
    "nodemailer": "^7.0.12",
    "pg": "^8.18.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^7.0.5",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.1.0"
  }
}
